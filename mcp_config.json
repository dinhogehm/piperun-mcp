{
  "server": {
    "name": "piperun-mcp",
    "version": "1.0.0",
    "description": "Servidor MCP para integra\u00e7\u00e3o com o CRM PipeRun"
  },
  "capabilities": {
    "tools": true,
    "resources": false,
    "prompts": true
  },
  "tool_categories": [
    "empresas",
    "contatos",
    "neg\u00f3cios",
    "funis",
    "etapas",
    "tarefas",
    "relat\u00f3rios",
    "prompts"
  ],
  "authentication": {
    "required": false,
    "method": "token"
  },
  "transports": [
    "http",
    "jsonrpc"
  ],
  "limits": {
    "max_concurrent_requests": 10,
    "request_timeout_seconds": 30,
    "max_tool_execution_time_seconds": 60
  }
}