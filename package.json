{
  "name": "piperun-mcp",
  "version": "1.0.0",
  "description": "Servidor MCP para interação com a API do CRM Piperun com suporte a HTTP e stdio",
  "main": "src/index.ts",
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "ts-node --esm src/index.ts",
    "start:server": "ts-node --esm src/server.ts",
    "dev": "nodemon --exec ts-node --esm src/server.ts",
    "build": "tsc",
    "build:server": "tsc && node dist/server.js",
    "start:docker": "node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dinhogehm/piperun-mcp.git"
  },
  "keywords": [
    "mcp",
    "piperun",
    "crm",
    "api",
    "typescript",
    "rest",
    "http"
  ],
  "author": "Osvaldo Gehm",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
